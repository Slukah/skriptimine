#!/bin/bash
if [ $# -ne 1 ]; then
    echo "K채ivita see skript koos arvuga, mille paarsust soovid kontrollida. N채iteks: $0 3"
else
    arv=$1
#Kontrollime, kas on t채isarv
    if ! [[ "$arv" =~ ^-?[0-9]+$ ]]; then
        echo "Sisesta palun t채isarv."
        exit 1
    fi
    
#Arvutame kahega
    jaak=$(( arv % 2 ))
    if [ $jaak -eq 0 ]; then
        echo "Antud arv on paaris"
    else
        echo "Antud arv on paaritu"
    fi
fi
